<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <BooleanToVisibilityConverter x:Key="BoolToVis" />

    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeBase">13</sys:Double>
    <sys:Double x:Key="FontSizeTitle">20</sys:Double>
    <sys:Double x:Key="FontSizePageTitle">25</sys:Double>
    <sys:Double x:Key="FontSizeMedium">16</sys:Double>

    <!-- Accent = твій PrimaryBrush по кольору -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF3347FF" />


    <CornerRadius x:Key="Cr5">5</CornerRadius>
    <CornerRadius x:Key="Cr10">10</CornerRadius>
    <CornerRadius x:Key="Cr12">12</CornerRadius>
    <CornerRadius x:Key="Cr14">14</CornerRadius>
    <CornerRadius x:Key="Cr20">20</CornerRadius>

    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#cfd0d1" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="White" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF3347FF" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF2234CC" />
    <SolidColorBrush x:Key="IconButtonBackgroundBrush" Color="#e6e6e6" />
    <SolidColorBrush x:Key="LightBorderBrush" Color="Silver" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#E2E2E2" />
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="#dedede" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Silver" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="Gray" />
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FF444444" />
    <SolidColorBrush x:Key="CancelButtonBackgroundBrush" Color="#FFE0E0E0" />
    <SolidColorBrush x:Key="SoftGrayBrush" Color="#FFEAEAEA" />
    <SolidColorBrush x:Key="RowHoverBrush" Color="#e0e0e0" />
    <SolidColorBrush x:Key="RowAlternateBrush" Color="#FFF7F7F7" />
    <SolidColorBrush x:Key="CheckboxCheckedBackgroundBrush" Color="#EEF1FF" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#E53935" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FFFFEBEE" />
    <SolidColorBrush x:Key="DangerBrush" Color="#ff0000" />

    <Style x:Key="TopCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource Cr20}" />
        <Setter Property="Padding" Value="10,10,10,12" />
        <Setter Property="Margin" Value="7,0,7,0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource Cr20}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.12" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="StatisticGridCardBorderStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource Cr20}" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

</ResourceDictionary>
