    <Style x:Key="BackButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource AnimatedButtonBaseStyle}">
        <Setter Property="Height" Value="34" />
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource SoftGrayBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
