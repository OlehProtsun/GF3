<ResourceDictionary     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="clr-namespace:WPFApp.Controls"
                        xmlns:local="clr-namespace:WPFApp.Converters">

    <local:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFCFD8E3"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FF111111"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#FFE6EBF2"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFFFFFFF"/>
    
    <Style x:Key="RoundedTextBoxBaseStyle" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxBaseStyle}">
        <Setter Property="MinHeight" Value="42" />
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Cr14}">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RoundedTextBoxWithPlaceholderStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource RoundedTextBoxStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Cr14}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" />

                            <TextBlock x:Name="Placeholder"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CompactRoundedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxBaseStyle}">
        <Setter Property="MinHeight" Value="37" />
        <Setter Property="Padding" Value="5,0" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border CornerRadius="{StaticResource Cr12}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" />
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CompactRoundedTextBoxWithPlaceholderStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource CompactRoundedTextBoxStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border CornerRadius="{StaticResource Cr12}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" />
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}" />

                        <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="AcceptsReturn" Value="True">
                            <Setter TargetName="Watermark" Property="VerticalAlignment" Value="Top" />
                            <Setter TargetName="Watermark" Property="Margin" Value="14,8,0,0" />
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ValidatedRoundedTextBoxStyle"
       TargetType="TextBox"
       BasedOn="{StaticResource RoundedTextBoxWithPlaceholderStyle}">
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
                <Setter Property="Background" Value="{StaticResource ErrorBackgroundBrush}" />
                <Setter Property="ToolTip"
                    Value="{Binding RelativeSource={RelativeSource Self},
                                    Path=(Validation.Errors),
                                    Converter={StaticResource FirstValidationErrorConverter}}" />
            </Trigger>

            <!-- необов’язково, але корисно -->
            <Trigger Property="Validation.HasError" Value="False">
                <Setter Property="ToolTip" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="RoundedComboBoxItemStyle" TargetType="{x:Type ComboBoxItem}">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="KeyboardNavigation.IsTabStop" Value="False"/>

        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#1F1F1F"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="12,9"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Border x:Name="ItemBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        Padding="{TemplateBinding Padding}"
                        Margin="{TemplateBinding Margin}"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Hover (темніший) -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="#FFD8E0EA"/>
                        </Trigger>

                        <!-- Selected -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="#FFCDD7E3"/>
                            <Setter Property="Foreground" Value="#111111"/>
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FF9CA3AF"/>
                            <Setter TargetName="ItemBorder" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RoundedComboBoxStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="ItemContainerStyle" Value="{StaticResource RoundedComboBoxItemStyle}"/>

        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    VirtualizingPanel.ScrollUnit="Item"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid SnapsToDevicePixels="True">
                        <!-- Field -->
                        <Border x:Name="Bd"
                            CornerRadius="{StaticResource Cr14}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                        <!-- Click overlay -->
                        <ToggleButton x:Name="WholeClick"
                                  Focusable="False"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border x:Name="Hit"
                                        Background="Transparent"
                                        CornerRadius="{StaticResource Cr14}"/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <!-- м'який hover замість LightGray -->
                                            <Setter TargetName="Hit" Property="Background" Value="#0A000000"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="Hit" Property="Background" Value="#14000000"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Hit" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <!-- Selected value -->
                        <ContentPresenter x:Name="SelectedContent"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                        <!-- Placeholder -->
                        <TextBlock x:Name="Placeholder"
                               Margin="{TemplateBinding Padding}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Text="{TemplateBinding Tag}"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                        <!-- Arrow -->
                        <Path Data="M 0 0 L 4 4 L 8 0 Z"
                          Fill="Gray"
                          Stretch="Uniform"
                          Width="10"
                          Height="6"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"
                          IsHitTestVisible="False"/>

                        <!-- Dropdown -->
                        <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Fade"
                           PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                           SnapsToDevicePixels="True">
                            <Border Margin="0,6,0,0"
                                Background="White"
                                BorderBrush="{StaticResource LightBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                SnapsToDevicePixels="True">
                                <ScrollViewer Margin="4"
                                          Focusable="False"
                                          SnapsToDevicePixels="True"
                                          CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          KeyboardNavigation.TabNavigation="None"
                                          KeyboardNavigation.DirectionalNavigation="Contained"
                                          VirtualizingPanel.IsVirtualizing="{TemplateBinding VirtualizingPanel.IsVirtualizing}"
                                          VirtualizingPanel.VirtualizationMode="{TemplateBinding VirtualizingPanel.VirtualizationMode}"
                                          VirtualizingPanel.ScrollUnit="Item"
                                          MaxHeight="260">
                                    <ItemsPresenter KeyboardNavigation.TabNavigation="None"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="SelectedItem" Value="{x:Null}">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FFCBD5E1"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="SquareValidationErrorTemplate">
        <Border BorderBrush="{StaticResource ErrorBrush}"
            BorderThickness="2"
            CornerRadius="2"
            SnapsToDevicePixels="True">
            <AdornedElementPlaceholder/>
        </Border>
    </ControlTemplate>

    <Style x:Key="ValidatedRoundedTextBoxErrorStyle"
       TargetType="TextBox"
       BasedOn="{StaticResource RoundedTextBoxWithPlaceholderStyle}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource SquareValidationErrorTemplate}"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
                <Setter Property="Background" Value="{StaticResource ErrorBackgroundBrush}" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="ToolTip"
                    Value="{Binding RelativeSource={RelativeSource Self},
                                    Path=(Validation.Errors),
                                    Converter={StaticResource FirstValidationErrorConverter}}" />
            </Trigger>
            <Trigger Property="Validation.HasError" Value="False">
                <Setter Property="ToolTip" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ValidatedRoundedComboBoxErrorStyle"
       TargetType="{x:Type ComboBox}"
       BasedOn="{StaticResource RoundedComboBoxStyle}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource SquareValidationErrorTemplate}"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="Background" Value="{StaticResource ErrorBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                <Setter Property="ToolTip"
                    Value="{Binding RelativeSource={RelativeSource Self},
                                    Path=(Validation.Errors),
                                    Converter={StaticResource FirstValidationErrorConverter}}"/>
            </Trigger>
            <Trigger Property="Validation.HasError" Value="False">
                <Setter Property="ToolTip" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ValidatedNumericUpDownErrorStyle"
       TargetType="{x:Type controls:NumericUpDown}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource SquareValidationErrorTemplate}"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="Background" Value="{StaticResource ErrorBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="ToolTip"
                    Value="{Binding RelativeSource={RelativeSource Self},
                                    Path=(Validation.Errors),
                                    Converter={StaticResource FirstValidationErrorConverter}}"/>
            </Trigger>
            <Trigger Property="Validation.HasError" Value="False">
                <Setter Property="ToolTip" Value="{x:Null}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
