<UserControl x:Class="WPFApp.Resources.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Background="Transparent">

    <UserControl.Resources>

        <CornerRadius x:Key="ControlRadius">12</CornerRadius>

        <Style x:Key="InnerNumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- База для кнопок +/- -->
        <Style x:Key="SpinButtonBaseStyle" TargetType="RepeatButton">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding Tag}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#14000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22000000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ліва кнопка "-" (закруглення тільки зліва) -->
        <Style x:Key="SpinMinusButtonStyle"
               TargetType="RepeatButton"
               BasedOn="{StaticResource SpinButtonBaseStyle}">
            <Setter Property="Tag" Value="15,0,0,15"/>
        </Style>

        <!-- Права кнопка "+" (закруглення тільки справа) -->
        <Style x:Key="SpinPlusButtonStyle"
               TargetType="RepeatButton"
               BasedOn="{StaticResource SpinButtonBaseStyle}">
            <Setter Property="Tag" Value="0,15,15,0"/>
        </Style>

    </UserControl.Resources>

    <!-- Outer рамка + закруглення -->
    <Border CornerRadius="{StaticResource ControlRadius}"
            BorderBrush="Silver"
            BorderThickness="1"
            Background="White">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="34"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="34"/>
            </Grid.ColumnDefinitions>

            <!-- ЛІВА КНОПКА "-" -->
            <Border Grid.Column="0"
                    Background="#FFF5F5F5"
                    BorderBrush="#22000000"
                    BorderThickness="0,0,1,0"
                    CornerRadius="12,0,0,12">
                <RepeatButton x:Name="PART_DownButton"
                              Style="{StaticResource SpinMinusButtonStyle}"
                              Click="Down_Click">
                    <TextBlock Text="−"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Padding="0,0,0,3"
                               Foreground="#4f4f4f"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </RepeatButton>
            </Border>

            <!-- ПОЛЕ ВВОДУ -->
            <TextBox x:Name="PART_TextBox"
                     Grid.Column="1"
                     Style="{StaticResource InnerNumericTextBoxStyle}"
                     Text="{Binding Value, ElementName=root, Mode=OneWay}"
                     IsReadOnly="{Binding IsReadOnly, ElementName=root}"
                     PreviewTextInput="TextBox_PreviewTextInput"
                     PreviewKeyDown="TextBox_PreviewKeyDown"
                     KeyDown="TextBox_KeyDown"
                     DataObject.Pasting="TextBox_Pasting"
                     LostFocus="TextBox_LostFocus"/>

            <!-- ПРАВА КНОПКА "+" -->
            <Border Grid.Column="2"
                    Background="#FFF5F5F5"
                    BorderBrush="#22000000"
                    BorderThickness="1,0,0,0"
                    CornerRadius="0,12,12,0">
                <RepeatButton x:Name="PART_UpButton"
                              Style="{StaticResource SpinPlusButtonStyle}"
                              Click="Up_Click">
                    <TextBlock Text="+"
                               Padding="0,0,0,3"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#4f4f4f"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </RepeatButton>
            </Border>

        </Grid>
    </Border>
</UserControl>