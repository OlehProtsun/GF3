<Application x:Class="WPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WPFApp.ViewModel"
             xmlns:avm="clr-namespace:WPFApp.ViewModel.Availability"
             xmlns:v="clr-namespace:WPFApp.View"
             xmlns:av="clr-namespace:WPFApp.View.Availability">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate DataType="{x:Type vm:EmployeeViewModel}">
            <v:EmployeeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ShopViewModel}">
            <v:ShopView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type avm:AvailabilityViewModel}">
            <av:AvailabilityView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ContainerViewModel}">
            <v:ContainerView/>
        </DataTemplate>

        <Geometry x:Key="IconInfo">
            M12,2A10,10 0 1 0 22,12A10,10 0 0 0 12,2ZM11,10H13V18H11ZM11,6H13V8H11Z
        </Geometry>

        <Geometry x:Key="IconWarn">
            M1,21H23L12,2L1,21ZM11,16H13V18H11ZM11,10H13V14H11Z
        </Geometry>

        <Geometry x:Key="IconError">
            M12,2A10,10 0 1 0 22,12A10,10 0 0 0 12,2ZM9,9L15,15M15,9L9,15
        </Geometry>

    </Application.Resources>
</Application>
