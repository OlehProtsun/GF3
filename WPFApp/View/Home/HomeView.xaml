<UserControl x:Class="WPFApp.View.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1100"
             d:DesignHeight="900"
             Background="{StaticResource PageBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Style="{StaticResource TopCardStyle}"
                Margin="9,8,9,0">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Home"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="{StaticResource FontSizePageTitle}"
                               Foreground="Black" />

                    <TextBlock Margin="0,6,0,0"
                               Text="Overview of current-month schedules, active assignments, and operations snapshot."
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="17"
                               Foreground="{StaticResource SecondaryTextBrush}" />

                    <TextBlock Margin="0,2,0,0"
                               Text="Monitor who is working today and inspect active monthly schedules in one place."
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="15"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <TextBlock Text="Current time"
                               HorizontalAlignment="Right"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="12"
                               Foreground="{StaticResource MutedTextBrush}" />

                    <TextBlock Text="{Binding CurrentTimeText}"
                               HorizontalAlignment="Right"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="{StaticResource FontSizeMedium}"
                               FontWeight="SemiBold"
                               Foreground="Black" />

                    <Button Margin="0,10,0,0"
                            Height="37"
                            MinWidth="120"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock Text="Refresh" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Margin="9,10,9,10"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Border Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Who Work Today?"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="{StaticResource FontSizeTitle}"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,0,0,10" />

                        <Border Grid.Row="1"
                                Background="{StaticResource SurfaceBrush}"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="2"
                                CornerRadius="{StaticResource Cr20}"
                                Padding="6"
                                ClipToBounds="True">
                            <DataGrid ItemsSource="{Binding WhoWorksTodayItems}"
                                      Style="{StaticResource ScheduleCardGridStyle}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      ScrollViewer.CanContentScroll="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Employee" Binding="{Binding Employee}" Width="2*"/>
                                    <DataGridTextColumn Header="Shift" Binding="{Binding Shift}" Width="*"/>
                                    <DataGridTextColumn Header="Shop" Binding="{Binding Shop}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource StatisticGridCardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Schedules this month" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock Text="{Binding MonthSchedulesCount}" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource StatisticGridCardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Containers total" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock Text="{Binding TotalContainersCount}" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Style="{StaticResource StatisticGridCardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Today assignments" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock Text="{Binding TodayAssignmentsCount}" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="6" Style="{StaticResource StatisticGridCardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Active shops" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                <TextBlock Text="{Binding ActiveShopsCount}" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Active schedules this month"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="{StaticResource FontSizeTitle}"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,0,0,10" />

                        <TextBlock Text="{Binding StatusText}"
                                   Margin="0,0,0,10"
                                   Foreground="{StaticResource MutedTextBrush}"
                                   FontSize="12" />

                        <ItemsControl ItemsSource="{Binding ActiveSchedules}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatisticGridCardBorderStyle}" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                                <TextBlock Text="{Binding Subtitle}" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                                            </StackPanel>

                                            <Border Grid.Row="1"
                                                    Background="{StaticResource SurfaceBrush}"
                                                    BorderBrush="{StaticResource CardBorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="{StaticResource Cr14}"
                                                    Padding="4"
                                                    ClipToBounds="True">
                                                <DataGrid ItemsSource="{Binding Items}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True"
                                                          Style="{StaticResource ScheduleCardGridStyle}"
                                                          EnableRowVirtualization="True"
                                                          EnableColumnVirtualization="True"
                                                          ScrollViewer.CanContentScroll="True"
                                                          MaxHeight="300">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Day" Binding="{Binding Day}" Width="80"/>
                                                        <DataGridTextColumn Header="Employee" Binding="{Binding Employee}" Width="*"/>
                                                        <DataGridTextColumn Header="Shift" Binding="{Binding Shift}" Width="*"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
