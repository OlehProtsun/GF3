<UserControl x:Class="WPFApp.View.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dt="clr-namespace:WPFApp.DesignTime"
             xmlns:dialogs="clr-namespace:WPFApp.View.Dialogs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:WPFApp.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignWidth="1100"
             d:DesignHeight="2000"
             Background="{StaticResource PageBackgroundBrush}"
             d:DataContext="{d:DesignInstance Type=dt:HomeViewDesignTime, IsDesignTimeCreatable=True}">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>


        <!-- Minimal DataGrid styles (Who works today) -->
        <Style x:Key="WhoWorksTodayGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>

            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>

            <!-- Оце і є “невеличкий відступ зліва” -->
            <Setter Property="Margin" Value="6,0,0,0"/>

            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="EnableColumnVirtualization" Value="True"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="WhoWorksTodayHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,9"/>
        </Style>

        <Style x:Key="WhoWorksTodayRowStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#08000000"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#12000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WhoWorksTodayCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextBlock.FontFamily" Value="{StaticResource DefaultFontFamily}"/>
            <Setter Property="TextBlock.FontSize" Value="13"/>
            <Setter Property="TextBlock.Foreground" Value="Black"/>
            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
        </Style>


        <!-- Fix missing font size resources used in Information section -->
        <sys:Double x:Key="FontSizeBody">14</sys:Double>
        <sys:Double x:Key="FontSizeCaption">12</sys:Double>
        <!-- Pills / tags for string lists (Schedules / Shops / Employees) -->
        <DataTemplate x:Key="PillItemTemplate">
            <Border Background="#EFEFEF"
            CornerRadius="14"
            Padding="10,6"
            Margin="0,0,8,8"
            HorizontalAlignment="Left"
            MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=ActualWidth}">
                <TextBlock Text="{Binding}"
                   FontFamily="{StaticResource DefaultFontFamily}"
                   FontSize="12"
                   Foreground="#333"
                   TextWrapping="Wrap"
                   TextTrimming="None"/>
            </Border>
        </DataTemplate>


        <Style x:Key="PillItemsControlStyle" TargetType="{x:Type ItemsControl}">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <!-- Wrap = items side-by-side + перенос на новий рядок -->
                        <WrapPanel Orientation="Horizontal"
                           IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Style="{StaticResource TopCardStyle}"
        Margin="9,8,9,0">
            <Grid >

                <!-- як у Employee List: рядки -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- і 2 колонки: текст зліва + блок справа -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Row 0: Title -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Home"
                   FontFamily="{StaticResource DefaultFontFamily}"
                   FontSize="{StaticResource FontSizePageTitle}"
                   Foreground="Black" />

                <!-- Row 1: Subtitle 1 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                   Margin="0,6,0,0"
                   Text="Overview of current-month schedules, active assignments, and operations snapshot."
                   FontFamily="{StaticResource DefaultFontFamily}"
                   FontSize="17"
                   Foreground="{StaticResource SecondaryTextBrush}" />

                <!-- Row 2: Subtitle 2 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                   Margin="0,2,0,0"
                   Text="Monitor who is working today and inspect active monthly schedules in one place."
                   FontFamily="{StaticResource DefaultFontFamily}"
                   FontSize="15"
                   Foreground="{StaticResource SecondaryTextBrush}" />

                <!-- Right side (time + refresh) -->
                <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <TextBlock Text="{Binding CurrentTimeText}"
                       Margin="0,0,0,6"
                       HorizontalAlignment="Center"
                       FontFamily="{StaticResource DefaultFontFamily}"
                       FontSize="{StaticResource FontSizeMedium}"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Opacity="0.9"/>

                    <Button Height="37"
                    MinWidth="170"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock Text="Refresh"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource DefaultFontFamily}" />
                    </Button>

                </StackPanel>

            </Grid>
        </Border>

        <!-- CONTENT under top section -->
        <ScrollViewer Grid.Row="1"
              Margin="9,10,9,10"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ROW 1: Who Work Today (LEFT) | Information (RIGHT) -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <!-- FIXED width for LEFT section -->
                        <ColumnDefinition Width="520"/>

                        <ColumnDefinition Width="12"/>

                        <!-- RIGHT section takes the rest -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ===================== SECTION: Who Work Today (LEFT) ===================== -->
                    <Border Grid.Column="0"
        Style="{StaticResource CardStyle}"
        Padding="15"
        Margin="0,0,0,12"
        VerticalAlignment="Top"
        MinHeight="610"
        Height="{Binding ElementName=RightInfoColumn, Path=ActualHeight}">


                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header with icon -->
                            <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,10">

                                <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                    <Path Data="{StaticResource IconAvailability}"
                                  Fill="Black"
                                  Stretch="Uniform"
                                  RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="-1"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>

                                <TextBlock Text="Who Work Today?"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="{StaticResource FontSizeTitle}"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                            </StackPanel>

                            <!-- Minimal preview-like grid container -->
                            <!-- Minimal preview-like grid container -->
                            <Border Grid.Row="1"
        Background="{StaticResource SurfaceBrush}"
        BorderBrush="{StaticResource CardBorderBrush}"
        BorderThickness="1"
        CornerRadius="{StaticResource Cr14}"
        Padding="2"
        ClipToBounds="True"
        VerticalAlignment="Top">

                                <DataGrid ItemsSource="{Binding WhoWorksTodayItems}"
              Style="{StaticResource WhoWorksTodayGridStyle}"
              ColumnHeaderStyle="{StaticResource WhoWorksTodayHeaderStyle}"
              RowStyle="{StaticResource WhoWorksTodayRowStyle}"
              CellStyle="{StaticResource WhoWorksTodayCellStyle}"
              SelectionMode="Single"
              SelectionUnit="FullRow"
              MaxHeight="320"
              VerticalAlignment="Top">

                                    <DataGrid.Resources>
                                        <Style TargetType="{x:Type DataGridRowHeader}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date"
                                Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                                Width="110"/>

                                        <DataGridTextColumn Header="Employee"
                                Binding="{Binding Employee}"
                                Width="2*"/>

                                        <DataGridTextColumn Header="Shift"
                                Binding="{Binding Shift}"
                                Width="*"/>

                                        <DataGridTextColumn Header="Shop"
                                Binding="{Binding Shop}"
                                Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>


                    <!-- ===================== RIGHT COLUMN: This month + Overall (separate) ===================== -->
                    <Grid Grid.Column="2" x:Name="RightInfoColumn" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ===================== SECTION: This month ===================== -->
                        <Border Grid.Row="0"
            Style="{StaticResource CardStyle}"
            Padding="15"
            VerticalAlignment="Top">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,0,10">

                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="{StaticResource IconAvailability}"
                          Fill="Black"
                          Stretch="Uniform"
                          RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="-1"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Viewbox>

                                    <TextBlock Text="This month"
                           FontFamily="{StaticResource DefaultFontFamily}"
                           FontSize="{StaticResource FontSizeTitle}"
                           FontWeight="Bold"
                           Foreground="Black"/>
                                </StackPanel>

                                <Border Grid.Row="1"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource Cr14}"
                    Padding="12"
                    ClipToBounds="True">

                                    <ScrollViewer
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              CanContentScroll="True">

                                        <StackPanel Margin="0,1,0,1">

                                            <!-- Date -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Date:"
                                       FontFamily="{StaticResource DefaultFontFamily}"
                                       FontSize="12"
                                       Foreground="Gray"/>

                                                <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentMonthLabel}"
                                       Margin="8,0,0,0"
                                       FontFamily="{StaticResource DefaultFontFamily}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="Black"/>
                                            </Grid>

                                            <!-- Container Name -->
                                            <Border Background="White"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                Padding="10"
                                Margin="0,0,0,10">
                                                <StackPanel>
                                                    <TextBlock Text="Container Name"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,0,4"/>

                                                    <TextBlock Text="{Binding CurrentMonthContainerName}"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Totals (value under label, side-by-side) -->
                                            <Border Background="White"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                Padding="10"
                                Margin="0,0,0,10">

                                                <StackPanel>
                                                    <TextBlock Text="Totals"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Margin="0,0,0,10"/>

                                                    <UniformGrid Columns="4" HorizontalAlignment="Stretch">

                                                        <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{StaticResource Cr14}"
                                            Padding="10"
                                            Margin="0,0,8,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Total hours"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="12"
                                                       Foreground="Gray"/>
                                                                <TextBlock Text="{Binding CurrentMonthTotalHours}"
                                                       Margin="0,4,0,0"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="Black"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{StaticResource Cr14}"
                                            Padding="10"
                                            Margin="0,0,8,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Total employees"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="12"
                                                       Foreground="Gray"/>
                                                                <TextBlock Text="{Binding CurrentMonthTotalEmployees}"
                                                       Margin="0,4,0,0"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="Black"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{StaticResource Cr14}"
                                            Padding="10"
                                            Margin="0,0,8,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Total schedules"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="12"
                                                       Foreground="Gray"/>
                                                                <TextBlock Text="{Binding CurrentMonthTotalSchedules}"
                                                       Margin="0,4,0,0"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="Black"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{StaticResource Cr14}"
                                            Padding="10">
                                                            <StackPanel>
                                                                <TextBlock Text="Total shops"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="12"
                                                       Foreground="Gray"/>
                                                                <TextBlock Text="{Binding CurrentMonthTotalShops}"
                                                       Margin="0,4,0,0"
                                                       FontFamily="{StaticResource DefaultFontFamily}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="Black"/>
                                                            </StackPanel>
                                                        </Border>

                                                    </UniformGrid>
                                                </StackPanel>
                                            </Border>

                                            <!-- Schedule list -->
                                            <Border Background="White"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                Padding="10"
                                Margin="0,0,0,10">
                                                <StackPanel>
                                                    <TextBlock Text="Schedule in this container"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Margin="0,0,0,6"/>
                                                    <ItemsControl ItemsSource="{Binding CurrentMonthScheduleNames}"
              Style="{StaticResource PillItemsControlStyle}"
              ItemTemplate="{StaticResource PillItemTemplate}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Shops list -->
                                            <Border Background="White"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                Padding="10"
                                Margin="0,0,0,10">
                                                <StackPanel>
                                                    <TextBlock Text="Shops in this container"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Margin="0,0,0,6"/>
                                                    <ItemsControl ItemsSource="{Binding CurrentMonthShopNames}"
              Style="{StaticResource PillItemsControlStyle}"
              ItemTemplate="{StaticResource PillItemTemplate}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Employees list -->
                                            <Border Background="White"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Cr14}"
                                Padding="10">
                                                <StackPanel>
                                                    <TextBlock Text="Employees in this container"
                                           FontFamily="{StaticResource DefaultFontFamily}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Margin="0,0,0,6"/>
                                                    <ItemsControl ItemsSource="{Binding CurrentMonthEmployeeNames}"
              Style="{StaticResource PillItemsControlStyle}"
              ItemTemplate="{StaticResource PillItemTemplate}"/>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- ===================== SECTION: Overall ===================== -->
                        <Border Grid.Row="2"
            Style="{StaticResource CardStyle}"
            Padding="15"
            VerticalAlignment="Top">

                            <StackPanel>
                                <TextBlock Text="Overall"
                       FontFamily="{StaticResource DefaultFontFamily}"
                       FontSize="{StaticResource FontSizeTitle}"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,0,0,10"/>

                                <UniformGrid Columns="3" HorizontalAlignment="Stretch">

                                    <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Cr14}"
                        Padding="10"
                        Margin="0,0,8,0">
                                        <StackPanel>
                                            <TextBlock Text="Employees"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="12"
                                   Foreground="Gray"/>
                                            <TextBlock Text="{Binding OverallTotalEmployees}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Cr14}"
                        Padding="10"
                        Margin="0,0,8,0">
                                        <StackPanel>
                                            <TextBlock Text="Containers"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="12"
                                   Foreground="Gray"/>
                                            <TextBlock Text="{Binding OverallTotalContainers}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Cr14}"
                        Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Shops"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="12"
                                   Foreground="Gray"/>
                                            <TextBlock Text="{Binding OverallTotalShops}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                                        </StackPanel>
                                    </Border>

                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </Grid>


                </Grid>

                <!-- ROW 2: Active schedules full width (Schedule Profile look 1:1) -->
                <Border Grid.Row="1"
        Style="{StaticResource CardStyle}"
        Padding="15"
        Margin="0,0,0,12">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="114*"/>
                            <ColumnDefinition Width="149*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with icon (same as other top sections) -->
                        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Top" Grid.ColumnSpan="2">
                            <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                <Path Data="{StaticResource IconScheduleDetails}"
                      Fill="Black"
                      Stretch="Uniform"
                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="-1"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Viewbox>

                            <TextBlock Text="Active schedules this month"
                       FontFamily="{StaticResource DefaultFontFamily}"
                       FontSize="{StaticResource FontSizeTitle}"
                       FontWeight="Bold"
                       Foreground="Black"/>
                        </StackPanel>

                        <!-- Status -->
                        <TextBlock Grid.Row="1"
                   Text="{Binding StatusText}"
                   Margin="0,0,0,10"
                   Foreground="{StaticResource MutedTextBrush}"
                   FontFamily="{StaticResource DefaultFontFamily}"
                   FontSize="12" Grid.ColumnSpan="2"/>

                        <!-- Cards -->
                        <ItemsControl Grid.Row="2"
                      ItemsSource="{Binding ActiveSchedules}" Grid.ColumnSpan="2">

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatisticGridCardBorderStyle}"
                Margin="0,0,0,12"
                Padding="12">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Top (Schedule name + Shop name) -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Schedule name -->
                                                <TextBlock Grid.Row="0"
                               Text="{Binding Title}"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="Black"
                               TextWrapping="Wrap"/>

                                                <!-- Shop + Month -->
                                                <DockPanel Grid.Row="1" Margin="0,3,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ShopName}" />
                                                        <TextBlock Text="{Binding MonthLabel}"
                                                           Margin="8,0,0,0"
                                                           Opacity="0.75"/>
                                                    </StackPanel>

                                                </DockPanel>
                                            </Grid>

                                            <!-- Matrix grid (bigger height) -->
                                            <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ScheduleMatrix}"
                          Loaded="ActiveScheduleMatrixGrid_Loaded"
                          IsReadOnly="True"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="False"
                          RowHeaderWidth="0"
                          HeadersVisibility="Column"
                          Style="{StaticResource ScheduleMatrixCompactGridStyle}"
                          CellStyle="{StaticResource ScheduleMatrixCellStyleBase}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          VerticalAlignment="Top"

                                                MinHeight="420"
                          MaxHeight="650">

                                                <DataGrid.Resources>
                                                    <Style TargetType="{x:Type ScrollBar}"
                               BasedOn="{StaticResource LeftRoundedScrollBarStyle}" />

                                                    <conv:EmployeeTotalHoursHeaderConverter x:Key="EmpTotalHeaderConverter"/>

                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                        <Setter Property="MinHeight" Value="56"/>
                                                        <Setter Property="Padding" Value="6,8"/>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Vertical" Margin="0,2" HorizontalAlignment="Center">

                                                                        <TextBlock Text="{Binding}"
                               TextAlignment="Center"
                               FontWeight="SemiBold"
                               TextWrapping="NoWrap"
                               TextTrimming="CharacterEllipsis"/>

                                                                        <TextBlock x:Name="HoursLine"
                               FontSize="11"
                               Foreground="{StaticResource MutedTextBrush}"
                               TextAlignment="Center">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding Converter="{StaticResource EmpTotalHeaderConverter}">
                                                                                    <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext"/>
                                                                                    <Binding RelativeSource="{RelativeSource AncestorType=DataGridColumnHeader}" Path="Column.SortMemberPath"/>
                                                                                    <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext.TotalHoursText"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>

                                                                    </StackPanel>

                                                                    <DataTemplate.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=HoursLine, Path=Text}" Value="">
                                                                            <Setter TargetName="HoursLine" Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </DataTemplate.Triggers>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>


                                                    <Style TargetType="{x:Type DataGridRowHeader}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Style>
                                                </DataGrid.Resources>

                                            </DataGrid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
        <!-- Refresh overlay (dims background) -->
        <Border Grid.RowSpan="2"
        Panel.ZIndex="9998"
        Background="#40000000"
        Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
        IsHitTestVisible="True"/>

        <!-- Refresh status (center) -->
        <dialogs:UIStatus Grid.RowSpan="2"
                  Panel.ZIndex="9999"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  IsHitTestVisible="False"
                  Status="{Binding NavStatus}"
                  Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
                  Width="420"
                          Height="120"/>

    </Grid>
</UserControl>
