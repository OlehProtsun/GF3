<UserControl x:Class="WPFApp.View.Container.ContainerEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="830" d:DesignWidth="852"
             Background="{StaticResource PageBackgroundBrush}">

    <!-- Layout:
         Row 0 - page header card
         Row 1 - centered edit form card -->
    <Grid ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource TopCardStyle}" Margin="9,8,9,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        HorizontalAlignment="Left"
                        Style="{StaticResource BackButtonSmallStyle}"
                        Command="{Binding CancelCommand}"
                        Width="62">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="14" Height="14" Margin="0,0,6,0">
                            <Path Data="{StaticResource BackSvgIconGeometry}"
                                  Stretch="Uniform"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                        </Viewbox>
                        <TextBlock Text="Back"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                    </StackPanel>
                </Button>

                <!-- Form title is dynamic (Create/Edit) -->
                <TextBlock Grid.Row="1"
                           Margin="0,10,0,0"
                           Text="{Binding FormTitle}"
                           Style="{StaticResource ContainerPageTitleTextStyle}" />

                <TextBlock Grid.Row="2"
                           Margin="0,6,0,0"
                           Text="{Binding FormSubtitle}"
                           Style="{StaticResource ContainerPageSubtitleTextStyle}" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="9,10,9,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Main edit form card -->
            <Border Style="{StaticResource ContainerCenterCardStyle}"
                    Grid.Column="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Section header -->
                    <StackPanel Style="{StaticResource ContainerSectionHeaderStackStyle}">
                        <Viewbox Style="{StaticResource ContainerSectionHeaderIconViewboxStyle}">
                            <Path Data="{StaticResource IconContainerInfo}"
                                  Style="{StaticResource ContainerHeaderIconPathFlippedStyle}" />
                        </Viewbox>
                        <TextBlock Text="Container Information"
                                   Style="{StaticResource ContainerSectionHeaderTitleTextStyle}" />
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Container ID:"
                                   Style="{StaticResource ContainerLabelTextStyle}" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding ContainerId}"
                                   Margin="6,0,0,0"
                                   Style="{StaticResource ContainerSmallValueTextStyle}" />
                    </Grid>

                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <!-- Name -->
                        <TextBlock Text="Name"
                                   Style="{StaticResource ContainerLabelTextStyle}" />

                        <Grid>
                            <TextBox x:Name="NameTextBox"
                 Style="{StaticResource ValidatedRoundedTextBoxStyle}"
                 Tag="Enter name..."
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

                            <!-- Placeholder overlay (shown only when TextBox is empty and not focused) -->
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock"
                                           BasedOn="{StaticResource ContainerInputPlaceholderOverlayStyle}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, ElementName=NameTextBox}" Value=""/>
                                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=NameTextBox}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- Note -->
                        <TextBlock Text="Note"
                                   Margin="0,12,0,0"
                                   Style="{StaticResource ContainerLabelTextStyle}" />

                        <Grid>
                            <TextBox x:Name="NoteTextBox"
                 Style="{StaticResource ValidatedRoundedTextBoxStyle}"
                 Height="190"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Top"
                 Padding="12,10,12,10"
                 Text="{Binding Note, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

                            <TextBlock Text="Enter note...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock"
                                           BasedOn="{StaticResource ContainerInputPlaceholderOverlayMultilineStyle}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, ElementName=NoteTextBox}" Value=""/>
                                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=NoteTextBox}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    <Grid Grid.Row="4" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button Width="84"
                                Height="33"
                                Style="{StaticResource RoundedButtonStyle}"
                                Background="{StaticResource CancelButtonBackgroundBrush}"
                                Foreground="{StaticResource MutedTextBrush}"
                                Content="Cancel"
                                Command="{Binding CancelCommand}" />

                        <Button Grid.Column="2"
                                Width="86"
                                Height="33"
                                Style="{StaticResource RoundedButtonStyle}"
                                Content="Save"
                                Command="{Binding SaveCommand}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
