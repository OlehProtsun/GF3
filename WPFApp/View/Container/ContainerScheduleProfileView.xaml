<UserControl x:Class="WPFApp.View.Container.ContainerScheduleProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:WPFApp.View.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="2000" d:DesignWidth="1500"
             Background="{StaticResource PageBackgroundBrush}">

    <UserControl.Resources>

        <!-- BoolToVis already exists in Theme.xaml -->

        <!-- Заголовок лівої карточки: базовий стиль вже винесений -->
        <Style x:Key="SideCardTitleTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource ContainerSectionHeaderTitleTextStyle}">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=ScheduleInfoToggle}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Карточка лівої панелі: базовий стиль уже є в ContainerScheduleResources.xaml -->
        <Style x:Key="ScheduleInfoCardStyle"
           TargetType="Border"
           BasedOn="{StaticResource CollapsibleSideCardBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=ScheduleInfoToggle}" Value="False">
                    <Setter Property="Height" Value="62"/>
                    <Setter Property="Padding" Value="12"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Щоб прибрати inline-Style у ColumnDefinition -->
        <Style x:Key="ScheduleInfoPanelColumnStyle" TargetType="ColumnDefinition">
            <Setter Property="Width" Value="400"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=ScheduleInfoToggle}" Value="False">
                    <Setter Property="Width" Value="140"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScheduleInfoGapColumnStyle" TargetType="ColumnDefinition">
            <Setter Property="Width" Value="10"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=ScheduleInfoToggle}" Value="False">
                    <Setter Property="Width" Value="8"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Дубльований filler під вертикальний scrollbar (використовується 2 рази) -->
        <Style x:Key="SummaryVerticalScrollbarFillerBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="Gainsboro"/>
            <Setter Property="BorderThickness" Value="1,0,0,0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Width" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=SummaryBodyScroll, Path=ComputedVerticalScrollBarVisibility}" Value="Visible">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Setter Property="Width" Value="{x:Static SystemParameters.VerticalScrollBarWidth}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    
    <Grid ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Pinned top card -->
        <!-- Pinned top card -->
        <Border Grid.Row="0"
        Style="{StaticResource TopCardStyle}"
        Margin="9,8,9,0">

            <!-- 2 halves -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- LEFT HALF: Back + title + subtitle -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Back -->
                    <Button Grid.Row="0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource BackButtonSmallStyle}"
                    Command="{Binding BackCommand}"
                    Width="62">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Viewbox Width="14" Height="14" Margin="0,0,6,0">
                                <Path Data="{StaticResource BackSvgIconGeometry}"
                              Stretch="Uniform"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                            </Viewbox>
                            <TextBlock Text="Back"
                               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                        </StackPanel>
                    </Button>

                    <!-- Title -->
                    <!-- Page title -->
                    <TextBlock Grid.Row="1"
                       Margin="0,10,0,0"
                       Text="Schedule Profile"
                       Style="{StaticResource ContainerPageTitleTextStyle}" />

                    <!-- Subtitle -->
                    <TextBlock Grid.Row="2"
                       Margin="0,6,0,0"
                       Text="Here you can see schedule profile details"
                       Style="{StaticResource ContainerPageSubtitleTextStyle}" />
                </Grid>

                <!-- RIGHT HALF: export buttons centered in this half -->
                <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                            Margin="0,0,30,0"
                    VerticalAlignment="Center">

                    <!-- Export to Excel -->
                    <Button Height="56"
                    MinWidth="220"
                    Padding="20,0"
                    Margin="0,0,12,0"
                    VerticalContentAlignment="Center"
                    Style="{StaticResource TopExportButtonStyle}"
                    Command="{Binding ExportToExcelCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Viewbox Width="20" Height="20" Margin="0,0,10,0">
                                <Path Data="{StaticResource IconExcel}"
      Style="{StaticResource FlippedSvgPathStyle}"
      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                            </Viewbox>

                            <TextBlock Text="Export to Excel"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Export to Code -->
                    <Button Height="56"
                    MinWidth="220"
                    Padding="20,0"
                    VerticalContentAlignment="Center"
                    Style="{StaticResource TopExportButtonStyle}"
                    Command="{Binding ExportToSQLiteCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Viewbox Width="20" Height="20" Margin="0,0,10,0">
                                <Path Data="{StaticResource IconCode}"
      Style="{StaticResource FlippedSvgPathStyle}"
      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                            </Viewbox>

                            <TextBlock Text="Export to Code"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Page scroll (everything except top card) -->
        <ScrollViewer Grid.Row="1"
                      Margin="9,10,9,10"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,0,12"
                      ClipToBounds="False">

            <Grid ClipToBounds="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Style="{StaticResource ScheduleInfoPanelColumnStyle}" />
                    <ColumnDefinition Style="{StaticResource ScheduleInfoGapColumnStyle}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- LEFT: Schedule Information -->
                <Border Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource ScheduleInfoCardStyle}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Style="{StaticResource ContainerSectionHeaderStackStyle}">
                                <Viewbox Style="{StaticResource ContainerSectionHeaderIconViewboxStyle}">
                                    <Path Data="{StaticResource IconScheduleDetails}"
                                      Style="{StaticResource ContainerHeaderIconPathFlippedStyle}" />
                                </Viewbox>

                                <TextBlock Text="Schedule Information"
                                   Style="{StaticResource SideCardTitleTextStyle}" />
                            </StackPanel>

                            <ToggleButton x:Name="ScheduleInfoToggle"
                                          Grid.Column="1"
                                          Style="{StaticResource HideShowToggleStyle}"
                                          IsChecked="True" />
                        </Grid>

                        <!-- Body -->
                        <Grid Grid.Row="1"
                          Margin="0,14,0,0"
                          Visibility="{Binding IsChecked, ElementName=ScheduleInfoToggle, Converter={StaticResource BoolToVis}}"
                          VerticalAlignment="Stretch">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- УСІ поля ДО Note (включно з заголовком "Note:") -->
                            <StackPanel Grid.Row="0">

                                <!-- (це твій існуючий контент без зміни) -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Schedule ID:"
                                       Style="{StaticResource FieldLabelStyle}"
                                       Margin="0"
                                       VerticalAlignment="Center" />

                                    <TextBlock Grid.Column="1"
                                       Text="{Binding ScheduleId}"
                                       FontFamily="{StaticResource DefaultFontFamily}"
                                       FontSize="12"
                                       Margin="6,0,0,0"
                                       Foreground="Black"
                                       VerticalAlignment="Center" />
                                </Grid>

                                <TextBlock Text="Schedule Name:"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Margin="0" />
                                <TextBlock Text="{Binding ScheduleName}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="16"
                                   Foreground="Black"
                                   TextWrapping="Wrap" />

                                <TextBlock Text="Month-Year:"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Margin="0,12,0,0" />
                                <TextBlock Text="{Binding ScheduleMonthYear}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="16"
                                   Foreground="Black"
                                   TextWrapping="Wrap" />

                                <TextBlock Text="Shop:"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Margin="0,12,0,0" />
                                <TextBlock Text="{Binding ShopName}"
                                   Margin="0,4,0,0"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="16"
                                   Foreground="Black"
                                   TextWrapping="Wrap" />

                                <TextBlock Text="Note:"
                                   Style="{StaticResource FieldLabelStyle}"
                                   Margin="0,12,0,0" />
                            </StackPanel>

                            <!-- NOTE: росте по контенту, але максимум = решта висоти секції; далі — скрол всередині -->
                            <ScrollViewer Grid.Row="1"
                                  Margin="0,4,0,0"
                                  VerticalAlignment="Top"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  PanningMode="VerticalOnly">

                                <TextBlock Text="{Binding Note}"
                                   FontFamily="{StaticResource DefaultFontFamily}"
                                   FontSize="16"
                                   Foreground="Black"
                                   TextWrapping="Wrap" />
                            </ScrollViewer>
                        </Grid>

                        <!-- Buttons hidden when collapsed -->
                        <Grid Grid.Row="2"
                              Margin="0,12,0,0"
                              Visibility="{Binding IsChecked, ElementName=ScheduleInfoToggle, Converter={StaticResource BoolToVis}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Width="84"
                                Style="{StaticResource RoundedButtonCancelStyle}"
                                Content="Cancel"
                                Command="{Binding CancelProfileCommand}" />

                            <Button Grid.Column="2"
                                Width="86"
                                Margin="0,0,8,0"
                                Style="{StaticResource RoundedButtonSmallStyle}"
                                Content="Edit"
                                Command="{Binding EditCommand}" />

                            <Button Grid.Column="3"
                                Width="86"
                                Style="{StaticResource RoundedButtonDangerStyle}"
                                Content="Delete"
                                Command="{Binding DeleteCommand}" />
                        </Grid>
                    </Grid>
                </Border>

                <!-- RIGHT: Schedule Matrix -->
                <Border Grid.Row="0"
                        Grid.Column="2"
                        Style="{StaticResource CardStyle}"
                        Padding="12"
                        Margin="0,12,0,0"
                        VerticalAlignment="Top"
                        Height="650">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Style="{StaticResource ContainerSectionHeaderStackStyle}">
                                <Viewbox Style="{StaticResource ContainerSectionHeaderIconViewboxStyle}">
                                    <Path Data="{StaticResource IconSchedule}"
                                  Style="{StaticResource ContainerHeaderIconPathFlippedStyle}" />
                                </Viewbox>

                                <TextBlock Text="Schedule Matrix"
                               Style="{StaticResource ContainerSectionHeaderTitleTextStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="12,0,0,0">

                                <Border Padding="8,2"
                                        CornerRadius="10"
                                        Background="{StaticResource OverlaySubtleBrush}"
                                        Margin="0,0,8,0">
                                    <TextBlock FontSize="12" Foreground="{StaticResource MutedTextBrush}">
                                        <Run Text="Total Employees: "/>
                                        <Run Text="{Binding TotalEmployees, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>

                                <Border Padding="8,2"
                                        CornerRadius="10"
                                        Background="{StaticResource OverlaySubtleBrush}">
                                    <TextBlock FontSize="12" Foreground="{StaticResource MutedTextBrush}">
                                        <Run Text="Total Hours: "/>
                                        <Run Text="{Binding TotalHoursText, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <DataGrid x:Name="dataGridScheduleProfile"
                          Grid.Row="1"
                          CanUserSortColumns="False"
                          Style="{StaticResource ScheduleMatrixCompactGridStyle}"
                          CellStyle="{StaticResource ScheduleMatrixCellStyleBase}"
                          ColumnHeaderStyle="{StaticResource ScheduleMatrixTwoLineHeaderStyle}"
                          ItemsSource="{Binding ScheduleMatrix}"
                          IsReadOnly="True"
                          AutoGenerateColumns="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- BOTTOM -->
                <Border Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Style="{StaticResource CardStyle}"
                    Padding="15"
                    Margin="0,10,0,0"
                    Height="650">

                    <Grid>
                        <!-- FIX: одна колонка, щоб не було порожнього простору справа -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Style="{StaticResource ContainerSectionHeaderStackStyle}">
                            <Viewbox Style="{StaticResource ContainerSectionHeaderIconViewboxStyle}"
                                Width="18"
                                Height="18">
                                <Path Data="{StaticResource IconInfo}"
                                  Style="{StaticResource ContainerHeaderIconPathStyle}" />
                            </Viewbox>

                            <TextBlock Text="Schedule Statistic"
                               Style="{StaticResource ContainerSectionHeaderTitleTextStyle}" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1"
                              Margin="0,12,0,0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="0"
                              HorizontalAlignment="Stretch">

                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- ===================== 1) TOP: Statistic wrap ===================== -->
                                <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                                    <WrapPanel Orientation="Horizontal"
                                       HorizontalAlignment="Left"
                                       Margin="0">

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                                   FontFamily="{StaticResource DefaultFontFamily}">
                                            <Run Text="Name: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                            <Run Text="{Binding ScheduleName, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Month: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding ScheduleMonth, Mode=OneWay, StringFormat={}{0:D2}}"
                                 FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Year: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding ScheduleYear, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Shop Name: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding ShopName, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Shop Address: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding ShopAddress, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Total Hours: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding TotalHoursText, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Total Employees: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding TotalEmployees, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Total Days: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding TotalDays, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Shift 1: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding Shift1, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                        <TextBlock Margin="0,0,18,6" TextWrapping="Wrap"
                                   FontFamily="{StaticResource DefaultFontFamily}">
                            <Run Text="Shift 2: " FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <Run Text="{Binding Shift2, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                        </TextBlock>

                                    </WrapPanel>
                                </Grid>

                                <StackPanel Grid.Row="1" Margin="0,6,0,0" HorizontalAlignment="Stretch">
                                    <TextBlock TextWrapping="Wrap"
                               FontFamily="{StaticResource DefaultFontFamily}">
                        <Run Text="{Binding TotalEmployees, Mode=OneWay, StringFormat=Total employees ({0}): }"
                             FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                        <Run Text="{Binding TotalEmployeesListText, Mode=OneWay}" FontSize="14" Foreground="Black"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- ===================== 2) SUMMARY TABLE (Matrix-like) ===================== -->
                                <Border Grid.Row="2"
                        Margin="0,16,0,0"
                        Style="{StaticResource StatisticGridCardBorderStyle}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">

                                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="18"/>
                                        </Grid.RowDefinitions>

                                        <!-- LEFT fixed + RIGHT scroll area -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="510"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ===================== TOP-LEFT ===================== -->
                                        <Grid Grid.Row="0" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="240"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}"/>
                                            <Border Grid.Column="1" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}"/>
                                            <Border Grid.Column="2" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}"/>
                                            <Border Grid.Column="3" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}"/>
                                        </Grid>

                                        <Grid Grid.Row="1" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="240"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                <TextBlock Text="Employee" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                            </Border>

                                            <Border Grid.Column="1" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                <TextBlock Text="Work Days" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                            </Border>

                                            <Border Grid.Column="2" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                <TextBlock Text="Free Days" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                            </Border>

                                            <Border Grid.Column="3" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                <TextBlock Text="Sum" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                            </Border>
                                        </Grid>

                                        <!-- ===================== TOP-RIGHT (header X-sync) ===================== -->
                                        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ScrollViewer x:Name="SummaryHeaderScroll"
                                          Grid.Column="0"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled"
                                          CanContentScroll="False"
                                          PanningMode="HorizontalOnly"
                                          PreviewMouseWheel="SummaryHeaderScroll_PreviewMouseWheel">
                                                <ScrollViewer.Resources>
                                                    <Style TargetType="{x:Type ScrollBar}"
                                           BasedOn="{StaticResource LeftRoundedScrollBarStyle}" />
                                                </ScrollViewer.Resources>

                                                <!-- IMPORTANT: stretch header content to body viewport -->
                                                <StackPanel MinWidth="{Binding ElementName=SummaryBodyScroll, Path=ViewportWidth}">
                                                    <ItemsControl ItemsSource="{Binding SummaryDayHeaders}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Style="{StaticResource ScheduleSummaryHeaderBorderStyle}" Width="270">
                                                                    <TextBlock Text="{Binding Text}" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <ItemsControl ItemsSource="{Binding SummaryDayHeaders}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Width="270">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="90"/>
                                                                        <ColumnDefinition Width="90"/>
                                                                        <ColumnDefinition Width="90"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Border Grid.Column="0" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                                        <TextBlock Text="From" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                                        <TextBlock Text="To" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                                                    </Border>
                                                                    <Border Grid.Column="2" Style="{StaticResource ScheduleSummaryHeaderBorderStyle}">
                                                                        <TextBlock Text="Hours" Style="{StaticResource ScheduleSummaryHeaderTextStyle}"/>
                                                                    </Border>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </ScrollViewer>

                                            <!-- filler under vertical scrollbar -->
                                            <Border Grid.Column="1"
                                            Style="{StaticResource SummaryVerticalScrollbarFillerBorderStyle}" />
                                        </Grid>

                                        <!-- ===================== BOTTOM-LEFT (Y-sync) ===================== -->
                                        <ScrollViewer x:Name="SummaryLeftScroll"
                                      Grid.Row="2" Grid.Column="0"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Hidden"
                                      CanContentScroll="False"
                                      PreviewMouseWheel="SummaryLeftScroll_PreviewMouseWheel">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="{x:Type ScrollBar}"
                                       BasedOn="{StaticResource LeftRoundedScrollBarStyle}" />
                                            </ScrollViewer.Resources>

                                            <ItemsControl ItemsSource="{Binding SummaryRows}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="240"/>
                                                                <ColumnDefinition Width="90"/>
                                                                <ColumnDefinition Width="90"/>
                                                                <ColumnDefinition Width="90"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Border Grid.Column="0" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                <TextBlock Text="{Binding Employee}"
                                                           Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                           HorizontalAlignment="Left"
                                                           Margin="10,0,6,0"/>
                                                            </Border>

                                                            <Border Grid.Column="1" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                <TextBlock Text="{Binding WorkDays}"
                                                           Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <Border Grid.Column="2" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                <TextBlock Text="{Binding FreeDays}"
                                                           Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <Border Grid.Column="3" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                <TextBlock Text="{Binding Sum}"
                                                           Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                           HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <!-- ===================== BOTTOM-RIGHT (main body) ===================== -->
                                        <ScrollViewer x:Name="SummaryBodyScroll"
                                      Grid.Row="2" Grid.Column="1"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Visible"
                                      CanContentScroll="False"
                                      ScrollChanged="SummaryBodyScroll_ScrollChanged"
                                      Loaded="SummaryBodyScroll_Loaded"
                                      SizeChanged="SummaryBodyScroll_SizeChanged">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="{x:Type ScrollBar}"
                                       BasedOn="{StaticResource LeftRoundedScrollBarStyle}" />
                                            </ScrollViewer.Resources>

                                            <ItemsControl ItemsSource="{Binding SummaryRows}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>

                                                        <!-- IMPORTANT: each row stretches to viewport width -->
                                                        <ItemsControl ItemsSource="{Binding Days}"
                                                      MinWidth="{Binding ElementName=SummaryBodyScroll, Path=ViewportWidth}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid Width="270">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="90"/>
                                                                            <ColumnDefinition Width="90"/>
                                                                            <ColumnDefinition Width="90"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <Border Grid.Column="0" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                            <TextBlock Text="{Binding From}"
                                                                       Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                                       HorizontalAlignment="Center"/>
                                                                        </Border>
                                                                        <Border Grid.Column="1" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                            <TextBlock Text="{Binding To}"
                                                                       Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                                       HorizontalAlignment="Center"/>
                                                                        </Border>
                                                                        <Border Grid.Column="2" Style="{StaticResource ScheduleSummaryCellBorderStyle}">
                                                                            <TextBlock Text="{Binding Hours}"
                                                                       Style="{StaticResource ScheduleSummaryBodyTextStyle}"
                                                                       HorizontalAlignment="Center"/>
                                                                        </Border>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>

                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <!-- ===================== Bottom horizontal scrollbar (separate) ===================== -->
                                        <Border Grid.Row="3" Grid.Column="0"
                                BorderBrush="Gainsboro"
                                BorderThickness="0,1,1,0"
                                Background="{StaticResource SurfaceBrush}" />

                                        <Grid Grid.Row="3" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ScrollBar x:Name="SummaryHScroll"
                                       Grid.Column="0"
                                       Orientation="Horizontal"
                                       Height="18"
                                       ValueChanged="SummaryHScroll_ValueChanged"/>

                                            <Border Grid.Column="1"
                                            Style="{StaticResource SummaryVerticalScrollbarFillerBorderStyle}" />
                                        </Grid>

                                    </Grid>
                                </Border>

                            </Grid>
                        </ScrollViewer>

                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
        <!-- Center overlay (dim background) -->
        <Border Grid.RowSpan="2"
        Panel.ZIndex="9998"
        Background="{StaticResource ContainerOverlayDimBrush}"
        Visibility="{Binding IsExportStatusVisible, Converter={StaticResource BoolToVis}}"
        IsHitTestVisible="True"/>

        <!-- Export status (center, bigger) -->
        <dialogs:UIStatus Grid.RowSpan="2"
                  Panel.ZIndex="9999"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  IsHitTestVisible="False"
                  Status="{Binding ExportStatus}"
                  Visibility="{Binding IsExportStatusVisible, Converter={StaticResource BoolToVis}}"
                  Width="420"
                  MinHeight="120"/>



    </Grid>
</UserControl>

