<UserControl x:Class="WPFApp.View.Shop.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dialogs="clr-namespace:WPFApp.View.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl Content="{Binding CurrentSection}" />

        <Border Panel.ZIndex="9998"
                Background="#40000000"
                Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
                IsHitTestVisible="True" />

        <dialogs:UIStatus Panel.ZIndex="9999"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False"
                          Status="{Binding NavStatus}"
                          Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
                          Width="420"
                          Height="120" />
    </Grid>
</UserControl>
