<UserControl x:Class="WPFApp.View.Availability.AvailabilityEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dt="clr-namespace:WPFApp.View.Availability.DesignTime"
             mc:Ignorable="d"
             d:DesignHeight="830" d:DesignWidth="852"
             d:DataContext="{d:DesignInstance Type=dt:AvailabilityEditViewDesignVM, IsDesignTimeCreatable=True}"
             Background="White">

    <!-- Ті ж самі стилі, як в AvailabilityListView.xaml -->
    <UserControl.Resources>

        <!-- Rounded button (аналог Guna2Button BorderRadius=12) -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="37"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FF3347FF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon button (37x37, LightGray) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="37"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded TextBox -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="37"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Silver"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid style (можна використовувати для всіх грідів) -->
        <Style x:Key="AvailabilityListGridStyle" TargetType="DataGrid">
            <!-- поведінка -->
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="IsReadOnly" Value="False"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>

            <!-- вигляд -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="Background" Value="Gainsboro"/>

            <!-- Column headers -->
            <Setter Property="ColumnHeaderHeight" Value="36"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Row style -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP CARD (як в ListView) -->
        <Border Grid.Row="0"
                Margin="5,0,5,0"
                Height="111"
                Background="White"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
            </Border.Effect>

            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back -->
                    <Button x:Name="btnBackToAvailabilityList"
                            Style="{StaticResource RoundedButtonStyle}"
                            Height="33"
                            Background="#FFE0E0E0"
                            Foreground="Gray"
                            Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="←" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Back" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="label5"
                                   Text="Availability Edit"
                                   FontFamily="Segoe UI"
                                   FontSize="15"
                                   Foreground="Black"/>
                        <TextBlock x:Name="label10"
                                   Margin="0,2,0,0"
                                   Text="Here you can change or provide information about availability"
                                   FontFamily="Segoe UI"
                                   FontSize="12"
                                   Foreground="Silver"/>
                    </StackPanel>

                    <!-- Add New -->
                </Grid>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Margin="9,10,9,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="409"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE (scroll) -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- INFORMATION CARD -->
                    <Border Margin="0,0,0,12"
                            Background="White"
                            CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                        </Border.Effect>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Background="White"
                                    BorderThickness="0"
                                    Padding="10,6"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="Information"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                            </Button>

                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock x:Name="label15"
                                               Text="Availability ID"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Foreground="Black"/>
                                    <TextBox x:Name="numberAvailabilityMonthId"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Height="33"
                                             Width="84"
                                             Background="#FFF5F5F5"
                                             IsReadOnly="True"
                                             Text="{Binding AvailabilityId}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="label13"
                                               Text="Availability Month"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Foreground="Black"/>
                                    <TextBox x:Name="NumbAvailabilityMonth"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Height="33"
                                             Width="84"
                                             Text="{Binding AvailabilityMonth, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, ValidatesOnExceptions=True}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock x:Name="label1"
                                               Text="Availability Year"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Foreground="Black"/>
                                    <TextBox x:Name="NumbAvailabilityYear"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Height="33"
                                             Width="84"
                                             Text="{Binding AvailabilityYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, ValidatesOnExceptions=True}"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Grid.Row="2" Margin="0,12,0,0">
                                <TextBlock x:Name="label11"
                                           Text="Availability Name"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="Black"/>
                                <TextBox x:Name="inputAvailabilityMonthName"
                                         Style="{StaticResource RoundedTextBoxStyle}"
                                         Height="36"
                                         Text="{Binding AvailabilityName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                            </StackPanel>

                            <Button x:Name="btnCacnelAvailabilityEdit2"
                                    Grid.Row="3"
                                    Margin="0,14,0,0"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Height="33"
                                    Width="84"
                                    Background="#FFE0E0E0"
                                    Foreground="Gray"
                                    Content="Cancel"
                                    Command="{Binding CancelInformationCommand}"/>
                        </Grid>
                    </Border>

                    <!-- EMPLOYEE CARD -->
                    <Border Margin="0,0,0,12"
                            Background="White"
                            CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                        </Border.Effect>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header row: title + search + icon -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Background="White"
                                        BorderThickness="0"
                                        Padding="10,6"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="Employee"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="Black"/>
                                </Button>

                                <TextBox Grid.Column="2"
                                         x:Name="textBoxSearchValueFromAvailabilityEdit"
                                         Style="{StaticResource RoundedTextBoxStyle}"
                                         Text="{Binding EmployeeSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                                <Button Grid.Column="4"
                                        x:Name="btnSearchEmployeeInAvailabilityEdit"
                                        Style="{StaticResource IconButtonStyle}"
                                        Command="{Binding SearchEmployeeCommand}">
                                    <Viewbox Width="15" Height="15">
                                        <Canvas Width="24" Height="24">
                                            <Ellipse Width="14" Height="14"
                                                     Stroke="White"
                                                     StrokeThickness="2"
                                                     Canvas.Left="2" Canvas.Top="2"/>
                                            <Line X1="14" Y1="14" X2="22" Y2="22"
                                                  Stroke="White"
                                                  StrokeThickness="2"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock x:Name="label12"
                                               Text="Selected Employee"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Foreground="Black"/>
                                    <ComboBox x:Name="comboboxEmployee"
                                              Margin="0,6,0,0"
                                              Height="36"
                                              ItemsSource="{Binding Employees}"
                                              DisplayMemberPath="FullName"
                                              SelectedItem="{Binding SelectedEmployee}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Margin="12,22,0,0"
                                            HorizontalAlignment="Right">
                                    <TextBlock x:Name="label14"
                                               Text="Employee ID:"
                                               FontFamily="Segoe UI"
                                               FontSize="11"
                                               Foreground="Gray"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock x:Name="lblEmployeeId"
                                               Text="{Binding SelectedEmployeeId}"
                                               FontFamily="Segoe UI"
                                               FontSize="11"
                                               Foreground="Black"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,14,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnCancelInEmployeeBox"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="84"
                                        Background="#FFE0E0E0"
                                        Foreground="Gray"
                                        Content="Cancel"
                                        Command="{Binding CancelEmployeeCommand}"/>

                                <Button x:Name="btnRemoveEmployeeFromGroup"
                                        Grid.Column="2"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="120"
                                        Background="Firebrick"
                                        Content="Remove Employee"
                                        Command="{Binding RemoveEmployeeCommand}"/>

                                <Button x:Name="btnAddEmployeeToGroup"
                                        Grid.Column="4"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="111"
                                        Content="Add Employee"
                                        Command="{Binding AddEmployeeCommand}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- BIND INFORMATION CARD -->
                    <Border Background="White"
                            CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                        </Border.Effect>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Background="White"
                                    BorderThickness="0"
                                    Padding="10,6"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="Bind Information"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                            </Button>

                            <Border Grid.Row="1"
                                    Margin="0,10,0,10"
                                    Background="Gainsboro"
                                    CornerRadius="20"
                                    ClipToBounds="True">
                                        <DataGrid x:Name="dataGridBinds"
                                                  Style="{StaticResource AvailabilityListGridStyle}"
                                                  ItemsSource="{Binding Binds}"
                                                  SelectedItem="{Binding SelectedBind}"/>
                            </Border>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnCacnelAvailabilityEdit3"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="84"
                                        Background="#FFE0E0E0"
                                        Foreground="Gray"
                                        Content="Cancel"
                                        Command="{Binding CancelBindCommand}"/>

                                <Button x:Name="btnDeleteBind"
                                        Grid.Column="2"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="86"
                                        Background="Firebrick"
                                        Content="Delete"
                                        Command="{Binding DeleteBindCommand}"/>

                                <Button x:Name="btnAddNewBind"
                                        Grid.Column="4"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Height="33"
                                        Width="86"
                                        Content="Add New"
                                        Command="{Binding AddBindCommand}"/>
                            </Grid>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- RIGHT SIDE -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                </Border.Effect>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Background="White"
                            BorderThickness="0"
                            Padding="10,6"
                            HorizontalAlignment="Left">
                        <TextBlock Text="Availability Table"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                    </Button>

                    <Border Grid.Row="1"
                            Margin="0,10,0,10"
                            Background="Gainsboro"
                            CornerRadius="20"
                            ClipToBounds="True">
                        <DataGrid x:Name="dataGridAvailabilityDays"
                                  Style="{StaticResource AvailabilityListGridStyle}"
                                  AutoGenerateColumns="False"
                                  ItemsSource="{Binding AvailabilityDays}"
                                  SelectedItem="{Binding SelectedAvailabilityDay}"/>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnCancel"
                                Style="{StaticResource RoundedButtonStyle}"
                                Height="33"
                                Width="84"
                                Background="#FFE0E0E0"
                                Foreground="Gray"
                                Content="Cancel"
                                Command="{Binding CancelCommand}"/>

                        <Button x:Name="btnSave"
                                Grid.Column="2"
                                Style="{StaticResource RoundedButtonStyle}"
                                Height="33"
                                Width="114"
                                Content="Save Changes"
                                Command="{Binding SaveCommand}"/>
                    </Grid>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
