<UserControl x:Class="WPFApp.View.Availability.AvailabilityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:WPFApp.View.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!--
        Host-view для модуля Availability.

        Що тут є:
        1) ContentControl -> показує поточну вкладку/секцію (List / Profile / Edit)
           через VM.CurrentSection.
        2) Поверх нього (overlay) показуємо UIStatus під час навігації/завантаження.
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Основний контент модуля (підміняється VM). -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentSection}" />

        <!-- Напівпрозорий фон під статусним вікном (блокує кліки). -->
        <Border Grid.RowSpan="2"
                Panel.ZIndex="9998"
                Background="{StaticResource AvailabilityOverlayDimBrush}"
                Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
                IsHitTestVisible="True" />

        <!-- Центрований статус (loader / text). -->
        <dialogs:UIStatus Grid.RowSpan="2"
                          Panel.ZIndex="9999"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False"
                          Status="{Binding NavStatus}"
                          Visibility="{Binding IsNavStatusVisible, Converter={StaticResource BoolToVis}}"
                          Width="420"
                          Height="120" />
    </Grid>
</UserControl>
