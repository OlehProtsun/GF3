<Application x:Class="GF3.Presentation.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:GF3.Presentation.Wpf.Converters"
             xmlns:viewModels="clr-namespace:GF3.Presentation.Wpf.ViewModels"
             xmlns:views="clr-namespace:GF3.Presentation.Wpf.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Controls.xaml" />
                <ResourceDictionary Source="Resources/Typography.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <DataTemplate DataType="{x:Type viewModels:EmployeePageViewModel}">
                <views:EmployeePage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ShopPageViewModel}">
                <views:ShopPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:AvailabilityPageViewModel}">
                <views:AvailabilityPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ContainerPageViewModel}">
                <views:ContainerPage />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
