<UserControl x:Class="GF3.Presentation.Wpf.Views.EmployeePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
            <DockPanel>
                <TextBlock Text="Employees" Style="{StaticResource TitleTextStyle}" DockPanel.Dock="Top" />
                <TextBox Margin="0,8,0,8" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search" Command="{Binding SearchCommand}" />
                <ListView Margin="0,12,0,0"
                          ItemsSource="{Binding Employees}"
                          SelectedItem="{Binding SelectedEmployee}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="First" DisplayMemberBinding="{Binding FirstName}" />
                            <GridViewColumn Header="Last" DisplayMemberBinding="{Binding LastName}" />
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Employee Details" Style="{StaticResource TitleTextStyle}" />
                <TextBlock Text="First Name" Margin="0,12,0,0" />
                <TextBox Text="{Binding SelectedEmployee.FirstName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Last Name" Margin="0,12,0,0" />
                <TextBox Text="{Binding SelectedEmployee.LastName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Email" Margin="0,12,0,0" />
                <TextBox Text="{Binding SelectedEmployee.Email, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Phone" Margin="0,12,0,0" />
                <TextBox Text="{Binding SelectedEmployee.Phone, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Left">
                    <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,8,0" />
                    <Button Content="Edit" Command="{Binding EditCommand}" Margin="0,0,8,0" />
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0,0,8,0" />
                    <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,8,0" />
                    <Button Content="Cancel" Command="{Binding CancelCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
